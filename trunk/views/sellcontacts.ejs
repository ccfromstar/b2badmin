                        $("#content_info").html("修改成功！");
                        $('#infoModal').modal('show');
                        $('#ModalRead').modal('hide');
                        $("#refresh").trigger("click");
            }
        }});
    }

    function setSORS(){
        var rcv = $("#topman").val();
        $.ajax({ type:"POST" , url: _tablename+"/setSORS", data:{id:$("#id").val(),rcv:rcv}, success: function(data){
