<script>
    var _tablename = "sellcontacts";
    $("#collapse19").attr("class","panel-collapse collapse in");
    $("#collapse9_all").attr("class","panel-collapse collapse in");

    $("#myModalLabel").html("B2B用户信息");

    $("#_updateContent").css("display","none");

    $("#_tablecontent").css("max-height","420px");

    $("#_dialogstyle").css("width","800px");

    function setRC(_id){
        var rcv = $("#rc"+_id).val();
        $.ajax({ type:"POST" , url: _tablename+"/setRC", data:{id:_id,rcv:rcv}, success: function(data){
            if(data==200){
                        $("#content_info").html("修改成功！");
                        $('#infoModal').modal('show');
                        $('#ModalRead').modal('hide');
                        $("#refresh").trigger("click");
            }
        }});
    }

    function setSA(_id){
        var rcv = $("#sa"+_id).val();
